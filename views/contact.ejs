<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/common.css">
</head>

<body>
    <%- include('partials/_nav') %>

        <!-- Contact Form Section -->
        <section class="contact py-5 m-5" style="background: var(--background-gradient); color: var(--primary-color);">
            <div class="container">
                <h2 class="text-center mb-5" style="font-weight: bold; text-shadow: var(--hover-glow);">Get In Touch
                </h2>
                <form action="/send-message" method="POST" style="max-width: 800px; margin: 0 auto;">
                    <!-- Full Name -->
                    <div class="mb-4">
                        <label for="name" class="form-label" style="font-weight: bold;">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name"
                            style="background: var(--card-gradient); color: white; border: none; box-shadow: var(--hover-glow);"
                            required>
                    </div>

                    <!-- Email Address -->
                    <div class="mb-4">
                        <label for="email" class="form-label" style="font-weight: bold;">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email"
                            style="background: var(--card-gradient); color: white; border: none; box-shadow: var(--hover-glow);"
                            required>
                    </div>

                    <!-- Phone Number -->
                    <div class="mb-4">
                        <label for="phone" class="form-label" style="font-weight: bold;">Phone Number</label>
                        <input type="text" class="form-control" id="phone" name="phone"
                            style="background: var(--card-gradient); color: white; border: none; box-shadow: var(--hover-glow);"
                            required>
                    </div>

                    <!-- Message -->
                    <div class="mb-4">
                        <label for="message" class="form-label" style="font-weight: bold;">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="4"
                            style="background: var(--card-gradient); color: white; border: none; box-shadow: var(--hover-glow);"
                            required></textarea>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-lg"
                            style="background: var(--primary-color); color: black; border: none; padding: 10px 30px; border-radius: 50px; box-shadow: var(--hover-glow); transition: transform 0.3s ease, box-shadow 0.3s ease;">
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
        </section>

        <style>
            .btn:hover {
                transform: scale(1.05);
                box-shadow: 0 0 30px rgba(255, 223, 0, 1);
            }

            input::placeholder,
            textarea::placeholder {
                color: rgba(255, 255, 255, 0.8);
            }
        </style>

        <%- include('partials/_footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>